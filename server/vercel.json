{
    "version": 2,
    "builds": [
      {
        "src": "server/index.js",  
        "use": "@vercel/node"
      },
      {
        "src": "cliente/package.json",  
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",  
        "dest": "/server/index.js"
      },
      {
        "src": "/cancel",  
        "dest": "/cliente/index.html"
      },
      {
        "src": "/success",  
        "dest": "/cliente/index.html"
      },
      {
        "src": "/(.*)",  
        "dest": "/cliente/index.html"
      }
    ]
  }